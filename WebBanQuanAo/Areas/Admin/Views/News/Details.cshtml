@model WebBanQuanAo.Models.News
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayoutAdmin.cshtml";
}

<style>
    dt {
        padding-top: 10px;
    }

    dd {
        padding-top: 10px;
    }

    p {
        height: 100px;
        margin: 20px;
        display: inline;
    }

    .sua {
        height: 30px;
        width: 40px;
        text-align: center;
        background-color: deeppink;
        display: inline;
        padding: 10px;
        position: relative;
        top: -20px;
    }

        .sua:hover {
            background-color: lightgray;
            color: black;
        }

        .sua a {
            padding-top: 5px;
            color: white;
        }

    .quayve {
        height: 30px;
        width: 40px;
        text-align: center;
        background-color: deeppink;
        display: inline;
        padding: 10px;
        position: relative;
        top: -20px;
    }

        .quayve:hover {
            transition: .4s;
            background-color: lightgray;
            color: black;
        }

        .quayve a {
            padding-top: 5px;
            color: white;
        }

    .abc {
        display: inline;
        position: relative;
        top: -18px;
        font-size: 30px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chi Tiết Tin Tức
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        Tiêu Đề
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt>
                        Hình Ảnh
                    </dt>
                    <dd>
                        <img src="~/Content/images/@Model.img" style="width:20% ; height:auto" />
                    </dd>
                    <dt>
                        Mô Tả
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.description)
                    </dd>
                    <dt>
                        Đường Dẫn
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.link)
                    </dd>
                    <dt>
                        Chi Tiết
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.detaik)
                    </dd>
                    <dt>
                        Meta
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.meta)
                    </dd>
                    <dt>
                       Hiển Thị
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.hide)
                    </dd>
                    <dt>
                        Sắp Xếp
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.order)
                    </dd>
                    <dt>
                        Ngày Bắt Đầu
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.datebegin)
                    </dd>
                </dl>
            </div>
            <p>
                <div class="sua">
                    @Html.ActionLink("Sửa", "Edit", new { id = Model.id })
                </div>
                <div class="abc">
                    |
                </div>
                <div class="quayve">
                    @Html.ActionLink("Quay Lại", "Index")
                </div>
            </p>
        </div>
    </div>
</div>