@model WebBanQuanAo.Models.Order

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayoutAdmin.cshtml";
}

<style>
    th, td {
        text-align: center;
    }

        td p {
            height: 50px;
            overflow-y: hidden;
            text-overflow: ellipsis;
        }
</style>
<div class="row">
    <div class="col-lg-12">
        <div style="height:15px"></div>
        <div class="panel panel-red">
            <div class="panel-heading">
                Chỉnh sửa trạng thái đơn hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                                @Html.HiddenFor(model => model.NgayTao, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.HiddenFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                           
                                @Html.HiddenFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                              
                                @Html.HiddenFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                           
                                @Html.HiddenFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                               
                        <div class="form-group">
                            @Html.Label("Đã giao: ", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @{
                                    bool trangthai = (Model.TrangThai.GetValueOrDefault(false) ? true : false);
                                }
                                @Html.CheckBoxFor(model => trangthai)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Lưu" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                    <div>
                        @Html.ActionLink("Quay về", "Index", "Index", new { @class = "btn btn-danger" })
                    </div>
            </div>
        </div>
    </div>
</div>

@section _Footer
{
    <script src="~/Areas/Admin/Content/ckfinder/ckfinder.js"></script>
    <script src="~/Areas/Admin/Content/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        var editor = CKEDITOR.replace("detaik");
        var editor = CKEDITOR.replace("detaik", { height: '600px' });
        customConfig: '/Areas/quantri/Content/ckeditor/config.js';
    </script>

}