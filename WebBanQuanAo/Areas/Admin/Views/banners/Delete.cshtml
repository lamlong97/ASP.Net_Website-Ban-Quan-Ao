@model WebBanQuanAo.Models.banner
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayoutAdmin.cshtml";
}
<style>
    dt {
        padding-top: 10px;
    }

    dd {
        padding-top: 10px;
    }

    p {
        height: 100px;
        margin: 20px;
        display: inline;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Bạn Có Chắc Muốn Xóa Không
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <h4>Bạn Có Muốn Xoá Không ?</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Tên
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt>
                        Meta
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.meta)
                    </dd>
                    <dt>
                        Ảnh
                    </dt>
                    <dd>
                        <img src="~/Content/images/@Model.img" style="width:20% ; height:auto" />
                    </dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>