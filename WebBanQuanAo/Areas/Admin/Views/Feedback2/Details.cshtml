@model WebBanQuanAo.Models.Feedback2
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayoutAdmin.cshtml";
}
<style>
    dt {
        padding-top: 10px;
    }

    dd {
        padding-top: 10px;
    }

    p {
        height: 100px;
        margin: 20px;
        display: inline;
    }

    .sua {
        height: 30px;
        width: 40px;
        text-align: center;
        background-color: deeppink;
        display: inline;
        padding: 10px;
        position: relative;
        top: -20px;
    }

        .sua:hover {
            background-color: lightgray;
            color: black;
        }

        .sua a {
            padding-top: 5px;
            color: white;
        }

    .quayve {
        height: 30px;
        width: 40px;
        text-align: center;
        background-color: deeppink;
        display: inline;
        padding: 10px;
        position: relative;
        top: -20px;
    }

        .quayve:hover {
            transition: .4s;
            background-color: lightgray;
            color: black;
        }

        .quayve a {
            padding-top: 5px;
            color: white;
        }

    .abc {
        display: inline;
        position: relative;
        top: -18px;
        font-size: 30px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chi Tiết Phản Hồi
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        Tiêu Đề
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        Số Điện Thoại
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt>
                        Email
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt>
                        Địa Chỉ
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt>
                        Nội Dung
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Content)
                    </dd>
                    <dt>
                        Ngày Lập
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>
                    <dt>
                        Trạng Thái
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </dl>
            </div>
            <p>
                <div class="sua">
                    @Html.ActionLink("Sửa", "Edit", new { id = Model.ID })
                </div>
                <div class="abc">
                    |
                </div>
                <div class="quayve">
                    @Html.ActionLink("Quay Lại", "Index")
                </div>
            </p>
        </div>
    </div>
</div>