@model WebBanQuanAo.Models.Product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayoutAdmin.cshtml";
}
<style>
    dt {
        padding-top: 10px;
    }

    dd {
        padding-top: 10px;
    }

    p {
        height: 100px;
        margin: 20px;
        display: inline;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chi Tiết Tin Tức
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <h4>Bạn Có Muốn Xoá Không ?</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Tên Sản Phẩm
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt>
                        Giá
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.price)
                    </dd>
                    <dt>
                        Hình Ảnh
                    </dt>
                    <dd>
                        <img src="~/Content/images/@Model.img" style="width:20% ; height:auto" />
                    </dd>
                    <dt>
                        Mô Tả
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.description)
                    </dd>
                    <dt>
                        Meta
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.meta)
                    </dd>
                    <dt>
                        Kích Cỡ
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.size)
                    </dd>
                    <dt>
                        Màu Sắc
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.color)
                    </dd>
                    <dt>
                        Hiển Thị
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.hide)
                    </dd>
                    <dt>
                        Sắp Xếp
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.order)
                    </dd>
                    <dt>
                        Ngày Bắt Đầu
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.datebegin)
                    </dd>
                    <dt>
                        Danh Mục
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.categoryid)
                    </dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Quay Lại Danh Sách", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>